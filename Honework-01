    <script>
        // Age slider and stepper synchronization
        const ageSlider = document.getElementById('ageSlider');
        const ageValue = document.getElementById('ageValue');
        const decreaseAge = document.getElementById('decreaseAge');
        const increaseAge = document.getElementById('increaseAge');
        
        function updateAge(value) {
            ageValue.textContent = value;
            ageSlider.value = value;
        }
        
        ageSlider.addEventListener('input', function() {
            updateAge(this.value);
        });
        
        decreaseAge.addEventListener('click', function() {
            let currentAge = parseInt(ageValue.textContent);
            if (currentAge > 1) {
                updateAge(currentAge - 1);
            }
        });
        
        increaseAge.addEventListener('click', function() {
            let currentAge = parseInt(ageValue.textContent);
            if (currentAge < 100) {
                updateAge(currentAge + 1);
            }
        });
        
        // Phone number validation
        const phoneInput = document.getElementById('phone');
        
        phoneInput.addEventListener('input', function() {
            const phoneValue = this.value;
            
            // Remove non-digit characters
            this.value = phoneValue.replace(/\D/g, '');
            
            // Update color based on length
            if (this.value.length === 11) {
                this.classList.remove('invalid');
                this.classList.add('valid');
            } else {
                this.classList.remove('valid');
                this.classList.add('invalid');
            }
        });
        
        // Submit button control based on switch state
        const agreementCheckbox = document.getElementById('agreement');
        const submitBtn = document.getElementById('submitBtn');
        
        agreementCheckbox.addEventListener('change', function() {
            submitBtn.disabled = !this.checked;
        });
        
        // Form submission
        const form = document.getElementById('questionnaire-form');
        
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Collect form data
            const formData = {
                lastName: document.getElementById('lastName').value,
                firstName: document.getElementById('firstName').value,
                middleName: document.getElementById('middleName').value,
                age: ageValue.textContent,
                phone: phoneInput.value,
                gender: document.querySelector('input[name="gender"]:checked')?.value || 'Not specified',
                agreement: agreementCheckbox.checked
            };
            
            // In a real application, you would send this data to a server
            alert('Form submitted successfully!\n\nEntered data:\n' + 
                  `Last Name: ${formData.lastName}\n` +
                  `First Name: ${formData.firstName}\n` +
                  `Middle Name: ${formData.middleName}\n` +
                  `Age: ${formData.age}\n` +
                  `Phone: ${formData.phone}\n` +
                  `Gender: ${formData.gender}\n` +
                  `Agreement: ${formData.agreement ? 'Yes' : 'No'}`);
        });
    </script>
</body>
