    <div class="container">
        <h1>Personal Information Form</h1>
        
        <form id="questionnaire-form">
            <div class="form-group">
                <label for="lastName">Last Name</label>
                <input type="text" id="lastName" name="lastName" required>
            </div>
            
            <div class="form-group">
                <label for="firstName">First Name</label>
                <input type="text" id="firstName" name="firstName" required>
            </div>
            
            <div class="form-group">
                <label for="middleName">Middle Name</label>
                <input type="text" id="middleName" name="middleName">
            </div>
            
            <div class="form-group">
                <label for="age">Age</label>
                <div class="age-controls">
                    <div class="slider-container">
                        <input type="range" id="ageSlider" name="ageSlider" min="1" max="100" value="25">
                    </div>
                    <div class="stepper-container">
                        <button type="button" class="stepper-btn" id="decreaseAge">-</button>
                        <span class="stepper-value" id="ageValue">25</span>
                        <button type="button" class="stepper-btn" id="increaseAge">+</button>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="text" id="phone" name="phone" class="phone-input invalid" maxlength="11" placeholder="Enter 11 digits">
                <div class="hint">Text is red when less than 11 digits, turns green when exactly 11 digits</div>
            </div>
            
            <div class="form-group">
                <label>Gender</label>
                <div class="gender-group">
                    <div class="radio-option">
                        <input type="radio" id="male" name="gender" value="male">
                        <label for="male">Male</label>
                    </div>
                    <div class="radio-option">
                        <input type="radio" id="female" name="gender" value="female">
                        <label for="female">Female</label>
                    </div>
                    <div class="radio-option">
                        <input type="radio" id="other" name="gender" value="other">
                        <label for="other">Other</label>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <div class="switch-container">
                    <label class="switch">
                        <input type="checkbox" id="agreement">
                        <span class="slider"></span>
                    </label>
                    <label for="agreement">I agree to the terms and conditions</label>
                </div>
            </div>
            
            <button type="submit" class="submit-btn" id="submitBtn" disabled>Submit</button>
